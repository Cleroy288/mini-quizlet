<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Intello.Pages.DashboardPage"
             Title="Intello"
             BackgroundColor="#0a0a12">
    
    <Grid>
        <!-- Grid Background Pattern -->
        <Grid ColumnDefinitions="*,*,*,*,*,*,*,*,*,*,*,*" RowDefinitions="*,*,*,*,*,*,*,*,*,*,*,*" Opacity="0.15">
            <BoxView Grid.Column="0" Grid.RowSpan="12" WidthRequest="1" Color="#2a2a3e" HorizontalOptions="End"/>
            <BoxView Grid.Column="1" Grid.RowSpan="12" WidthRequest="1" Color="#2a2a3e" HorizontalOptions="End"/>
            <BoxView Grid.Column="2" Grid.RowSpan="12" WidthRequest="1" Color="#2a2a3e" HorizontalOptions="End"/>
            <BoxView Grid.Column="3" Grid.RowSpan="12" WidthRequest="1" Color="#2a2a3e" HorizontalOptions="End"/>
            <BoxView Grid.Column="4" Grid.RowSpan="12" WidthRequest="1" Color="#2a2a3e" HorizontalOptions="End"/>
            <BoxView Grid.Column="5" Grid.RowSpan="12" WidthRequest="1" Color="#2a2a3e" HorizontalOptions="End"/>
            <BoxView Grid.Column="6" Grid.RowSpan="12" WidthRequest="1" Color="#2a2a3e" HorizontalOptions="End"/>
            <BoxView Grid.Column="7" Grid.RowSpan="12" WidthRequest="1" Color="#2a2a3e" HorizontalOptions="End"/>
            <BoxView Grid.Column="8" Grid.RowSpan="12" WidthRequest="1" Color="#2a2a3e" HorizontalOptions="End"/>
            <BoxView Grid.Column="9" Grid.RowSpan="12" WidthRequest="1" Color="#2a2a3e" HorizontalOptions="End"/>
            <BoxView Grid.Column="10" Grid.RowSpan="12" WidthRequest="1" Color="#2a2a3e" HorizontalOptions="End"/>
            <BoxView Grid.Row="0" Grid.ColumnSpan="12" HeightRequest="1" Color="#2a2a3e" VerticalOptions="End"/>
            <BoxView Grid.Row="1" Grid.ColumnSpan="12" HeightRequest="1" Color="#2a2a3e" VerticalOptions="End"/>
            <BoxView Grid.Row="2" Grid.ColumnSpan="12" HeightRequest="1" Color="#2a2a3e" VerticalOptions="End"/>
            <BoxView Grid.Row="3" Grid.ColumnSpan="12" HeightRequest="1" Color="#2a2a3e" VerticalOptions="End"/>
            <BoxView Grid.Row="4" Grid.ColumnSpan="12" HeightRequest="1" Color="#2a2a3e" VerticalOptions="End"/>
            <BoxView Grid.Row="5" Grid.ColumnSpan="12" HeightRequest="1" Color="#2a2a3e" VerticalOptions="End"/>
            <BoxView Grid.Row="6" Grid.ColumnSpan="12" HeightRequest="1" Color="#2a2a3e" VerticalOptions="End"/>
            <BoxView Grid.Row="7" Grid.ColumnSpan="12" HeightRequest="1" Color="#2a2a3e" VerticalOptions="End"/>
            <BoxView Grid.Row="8" Grid.ColumnSpan="12" HeightRequest="1" Color="#2a2a3e" VerticalOptions="End"/>
            <BoxView Grid.Row="9" Grid.ColumnSpan="12" HeightRequest="1" Color="#2a2a3e" VerticalOptions="End"/>
            <BoxView Grid.Row="10" Grid.ColumnSpan="12" HeightRequest="1" Color="#2a2a3e" VerticalOptions="End"/>
        </Grid>
        
        <!-- Main Content -->
        <Grid RowDefinitions="Auto,*" Padding="0">
            
            <!-- Header Section -->
            <Border Grid.Row="0" BackgroundColor="#12121a" StrokeThickness="0" Padding="60,50">
                <VerticalStackLayout Spacing="16" HorizontalOptions="Center" VerticalOptions="Center">
                    <!-- Logo -->
                    <Border BackgroundColor="#e94560" 
                            StrokeThickness="0"
                            HeightRequest="70" 
                            WidthRequest="70"
                            StrokeShape="RoundRectangle 14">
                        <Label Text="I" 
                               FontSize="36" 
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center" 
                               VerticalOptions="Center"/>
                    </Border>
                    
                    <Label Text="Intello" 
                           FontSize="42" 
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"/>
                    
                    <Label Text="Master Python through interactive learning" 
                           FontSize="16" 
                           TextColor="#6b6b7e"
                           HorizontalOptions="Center"/>
                    
                    <!-- Stats Row -->
                    <HorizontalStackLayout Spacing="40" HorizontalOptions="Center" Margin="0,16,0,0">
                        <VerticalStackLayout HorizontalOptions="Center">
                            <Label Text="3" FontSize="26" FontAttributes="Bold" TextColor="#e94560" HorizontalOptions="Center"/>
                            <Label Text="Quiz Sets" FontSize="11" TextColor="#5b5b6e" HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                        <BoxView WidthRequest="1" HeightRequest="36" Color="#2a2a3e"/>
                        <VerticalStackLayout HorizontalOptions="Center">
                            <Label Text="15" FontSize="26" FontAttributes="Bold" TextColor="#00b894" HorizontalOptions="Center"/>
                            <Label Text="Questions" FontSize="11" TextColor="#5b5b6e" HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                        <BoxView WidthRequest="1" HeightRequest="36" Color="#2a2a3e"/>
                        <VerticalStackLayout HorizontalOptions="Center">
                            <Label Text="3" FontSize="26" FontAttributes="Bold" TextColor="#533483" HorizontalOptions="Center"/>
                            <Label Text="Modes" FontSize="11" TextColor="#5b5b6e" HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>
            
            <!-- Game Cards Section -->
            <ScrollView Grid.Row="1">
                <VerticalStackLayout Padding="60,40" Spacing="20">
                    
                    <Label Text="Choose Your Learning Mode" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           TextColor="White"
                           Margin="0,0,0,8"/>
                    
                    <Grid ColumnDefinitions="*,*,*" ColumnSpacing="20">
                        
                        <!-- QCM Card -->
                        <Border Grid.Column="0" 
                                BackgroundColor="#14141e"
                                Stroke="#1e1e2e"
                                StrokeThickness="1"
                                StrokeShape="RoundRectangle 12"
                                Padding="0">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnQcmTapped"/>
                            </Border.GestureRecognizers>
                            <Grid RowDefinitions="Auto,*,Auto">
                                <BoxView Grid.Row="0" HeightRequest="3" Color="#e94560"/>
                                
                                <VerticalStackLayout Grid.Row="1" Padding="24" Spacing="14">
                                    <Border BackgroundColor="#1e1e2e" 
                                            StrokeThickness="0"
                                            HeightRequest="48" 
                                            WidthRequest="48"
                                            StrokeShape="RoundRectangle 10"
                                            HorizontalOptions="Start">
                                        <Label Text="Q" FontSize="20" FontAttributes="Bold" TextColor="#e94560" HorizontalOptions="Center" VerticalOptions="Center"/>
                                    </Border>
                                    
                                    <Label Text="QCM Quiz" 
                                           FontSize="18" 
                                           FontAttributes="Bold"
                                           TextColor="White"/>
                                    <Label Text="Test your Python knowledge with multiple choice questions" 
                                           FontSize="13" 
                                           TextColor="#6b6b7e"
                                           LineBreakMode="WordWrap"/>
                                    
                                    <HorizontalStackLayout Spacing="10" Margin="0,4,0,0">
                                        <Border BackgroundColor="#1e1e2e" StrokeThickness="0" Padding="8,4" StrokeShape="RoundRectangle 4">
                                            <Label Text="3 Sets" FontSize="10" TextColor="#6b6b7e"/>
                                        </Border>
                                        <Border BackgroundColor="#1e1e2e" StrokeThickness="0" Padding="8,4" StrokeShape="RoundRectangle 4">
                                            <Label Text="15 Questions" FontSize="10" TextColor="#6b6b7e"/>
                                        </Border>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                                
                                <Border Grid.Row="2" BackgroundColor="#18181e" StrokeThickness="0" Padding="18,14">
                                    <HorizontalStackLayout HorizontalOptions="End" Spacing="6">
                                        <Label Text="Start" FontSize="13" FontAttributes="Bold" TextColor="#e94560"/>
                                        <Label Text="→" FontSize="13" TextColor="#e94560"/>
                                    </HorizontalStackLayout>
                                </Border>
                            </Grid>
                        </Border>
                        
                        <!-- Flashcard Card -->
                        <Border Grid.Column="1" 
                                BackgroundColor="#14141e"
                                Stroke="#1e1e2e"
                                StrokeThickness="1"
                                StrokeShape="RoundRectangle 12"
                                Opacity="0.5"
                                Padding="0">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnFlashcardTapped"/>
                            </Border.GestureRecognizers>
                            <Grid RowDefinitions="Auto,*,Auto">
                                <BoxView Grid.Row="0" HeightRequest="3" Color="#533483"/>
                                
                                <VerticalStackLayout Grid.Row="1" Padding="24" Spacing="14">
                                    <Border BackgroundColor="#1e1e2e" 
                                            StrokeThickness="0"
                                            HeightRequest="48" 
                                            WidthRequest="48"
                                            StrokeShape="RoundRectangle 10"
                                            HorizontalOptions="Start">
                                        <Label Text="F" FontSize="20" FontAttributes="Bold" TextColor="#533483" HorizontalOptions="Center" VerticalOptions="Center"/>
                                    </Border>
                                    
                                    <Label Text="Flashcards" 
                                           FontSize="18" 
                                           FontAttributes="Bold"
                                           TextColor="White"/>
                                    <Label Text="Memorize concepts with spaced repetition cards" 
                                           FontSize="13" 
                                           TextColor="#6b6b7e"
                                           LineBreakMode="WordWrap"/>
                                    
                                    <Border BackgroundColor="#533483" StrokeThickness="0" Padding="8,4" StrokeShape="RoundRectangle 4" HorizontalOptions="Start" Margin="0,4,0,0">
                                        <Label Text="Coming Soon" FontSize="10" FontAttributes="Bold" TextColor="White"/>
                                    </Border>
                                </VerticalStackLayout>
                                
                                <Border Grid.Row="2" BackgroundColor="#18181e" StrokeThickness="0" Padding="18,14">
                                    <HorizontalStackLayout HorizontalOptions="End" Spacing="6">
                                        <Label Text="Preview" FontSize="13" TextColor="#5b5b6e"/>
                                        <Label Text="→" FontSize="13" TextColor="#5b5b6e"/>
                                    </HorizontalStackLayout>
                                </Border>
                            </Grid>
                        </Border>
                        
                        <!-- Code Game Card -->
                        <Border Grid.Column="2" 
                                BackgroundColor="#14141e"
                                Stroke="#1e1e2e"
                                StrokeThickness="1"
                                StrokeShape="RoundRectangle 12"
                                Opacity="0.5"
                                Padding="0">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnCodeGameTapped"/>
                            </Border.GestureRecognizers>
                            <Grid RowDefinitions="Auto,*,Auto">
                                <BoxView Grid.Row="0" HeightRequest="3" Color="#00b894"/>
                                
                                <VerticalStackLayout Grid.Row="1" Padding="24" Spacing="14">
                                    <Border BackgroundColor="#1e1e2e" 
                                            StrokeThickness="0"
                                            HeightRequest="48" 
                                            WidthRequest="48"
                                            StrokeShape="RoundRectangle 10"
                                            HorizontalOptions="Start">
                                        <Label Text="&lt;/&gt;" FontSize="14" FontAttributes="Bold" TextColor="#00b894" HorizontalOptions="Center" VerticalOptions="Center"/>
                                    </Border>
                                    
                                    <Label Text="Code Game" 
                                           FontSize="18" 
                                           FontAttributes="Bold"
                                           TextColor="White"/>
                                    <Label Text="Practice writing real Python code with challenges" 
                                           FontSize="13" 
                                           TextColor="#6b6b7e"
                                           LineBreakMode="WordWrap"/>
                                    
                                    <Border BackgroundColor="#00b894" StrokeThickness="0" Padding="8,4" StrokeShape="RoundRectangle 4" HorizontalOptions="Start" Margin="0,4,0,0">
                                        <Label Text="Coming Soon" FontSize="10" FontAttributes="Bold" TextColor="White"/>
                                    </Border>
                                </VerticalStackLayout>
                                
                                <Border Grid.Row="2" BackgroundColor="#18181e" StrokeThickness="0" Padding="18,14">
                                    <HorizontalStackLayout HorizontalOptions="End" Spacing="6">
                                        <Label Text="Preview" FontSize="13" TextColor="#5b5b6e"/>
                                        <Label Text="→" FontSize="13" TextColor="#5b5b6e"/>
                                    </HorizontalStackLayout>
                                </Border>
                            </Grid>
                        </Border>
                        
                    </Grid>
                    
                </VerticalStackLayout>
            </ScrollView>
            
        </Grid>
    </Grid>
    
</ContentPage>
